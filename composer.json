{
    "name": "gamez/mite",
    "description": "Interact with mite (https://mite.de) from your PHP application.",
    "keywords": ["mite", "api", "sdk", "time tracking"],
    "license": "MIT",
    "homepage": "https://github.com/jeromegamez/mite-php",
    "authors": [
        {
            "name": "Jérôme Gamez",
            "homepage": "https://github.com/jeromegamez"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/jeromegamez"
        }
    ],
    "require": {
        "php": "~8.1.0|~8.2.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "beste/json": "^1.2",
        "psr/http-client": "^1.0.1",
        "psr/http-client-implementation": "^1.0",
        "psr/http-factory": "^1.0.1",
        "psr/http-factory-implementation": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.15.1",
        "guzzlehttp/guzzle": "^7.5",
        "php-http/discovery": "^1.15",
        "php-http/guzzle7-adapter": "^1.0",
        "php-http/vcr-plugin": "^1.2",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10.9",
        "phpstan/phpstan-phpunit": "^1.3.11",
        "phpunit/phpunit": "^10.0.19",
        "symfony/var-dumper": "^6.2.8",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "Gamez\\Mite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gamez\\Mite\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "php-http/discovery": true
        }
    },
    "scripts": {
        "cs": [
            "vendor/bin/php-cs-fixer fix --diff"
        ],
        "lint": [
            "XDEBUG_MODE=off vendor/bin/phpstan"
        ],
        "test": [
            "vendor/bin/phpunit --testdox"
        ],
        "test-coverage": [
            "Composer\\Config::disableProcessTimeout",
            "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text --coverage-html=.build/coverage"
        ]
    }
}
