{
    "name": "gamez/mite",
    "description": "Interact with mite (https://mite.de) from your PHP application.",
    "keywords": ["mite", "api", "sdk", "time tracking"],
    "license": "MIT",
    "homepage": "https://github.com/jeromegamez/mite-php",
    "authors": [
        {
            "name": "Jérôme Gamez",
            "homepage": "https://github.com/jeromegamez"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/jeromegamez"
        }
    ],
    "require": {
        "php": "~8.1.0|~8.2.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "beste/json": "^1.2",
        "psr/http-client": "^1.0.1",
        "psr/http-client-implementation": "^1.0",
        "psr/http-factory": "^1.0.1",
        "psr/http-factory-implementation": "^1.0",
        "psr/http-message": "^1.0.1"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.5",
        "kriswallsmith/buzz": "^1.2.1",
        "laminas/laminas-diactoros": "^2.24",
        "nyholm/psr7": "^1.5.1",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.9.17",
        "symfony/var-dumper": "^6.2.5"
    },
    "autoload": {
        "psr-4": {
            "Gamez\\Mite\\": "src"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "install-tools": [
            "@install-php-cs-fixer"
        ],
        "install-php-cs-fixer": [
            "mkdir --parents tools/php-cs-fixer",
            "composer require --dev --working-dir=tools/php-cs-fixer beste/php-cs-fixer-config"
        ],
        "cs": [
            "PHP_CS_FIXER_IGNORE_ENV=1 tools/php-cs-fixer/vendor/bin/php-cs-fixer fix --diff"
        ]
    }
}
